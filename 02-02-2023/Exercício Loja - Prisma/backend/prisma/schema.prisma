// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Setor {
  id_setor Int @id @default(autoincrement())
  nome String
  comissao Float
  produto Produto[]
  vendedor Vendedor[]
}

model Produto {
  id_produto Int @id @default(autoincrement())
  nome String
  valor Float
  id_setor Int
  id Setor @relation(fields: [id_setor], references: [id_setor])
  detalhe Detalhe []
}

model Vendedor {
  id_vendedor Int @id @default(autoincrement())
  nome String
  salario Float
  id_setor Int
  id Setor @relation(fields: [id_setor], references: [id_setor])
  venda Venda []
}

model Venda {
  id_venda Int @id @default(autoincrement())
  data_venda DateTime @default(now())
  id_vendedor Int
  id Vendedor @relation(fields:[id_vendedor], references: [id_vendedor])
  detalhe Detalhe []
}

model Detalhe {
  id_detalhe Int @id @default(autoincrement())
  id_produto Int
  id_venda Int
  quantidade Int
  id Produto @relation(fields:[id_produto], references: [id_produto])
  id_v Venda @relation(fields:[id_venda], references: [id_venda])
}