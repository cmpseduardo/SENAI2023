// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Setor {
  id_setor Int @id @default(autoincrement())
  nome String
  comissao Float
  produto Produto[]
  vendedor Vendedor[]
}

model Produto {
  id_produto Int @id @default(autoincrement())
  nome String
  valor Float
  id_setor Int
  id Setor @relation(fields: [id_setor], references: [id_setor])
}

model Vendedor {
  id_vendedor Int @id @default(autoincrement())
  nome String
  salario Float
  id_setor Int
  id Setor @relation(fields: [id_setor], references: [id_setor])
}