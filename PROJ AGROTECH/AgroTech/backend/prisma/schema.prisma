// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id_usuario Int @id @default(autoincrement())
  email String
  senha String
  nome String
  tipo String
}

model Motorista {
  id_motorista Int @id @default(autoincrement())
  nome String
  cpf String @unique
  cnh String @unique
  alocacao Alocacao[]
}

model Veiculo {
  id_veiculo Int @id @default(autoincrement())
  placa String
  modelo String
  marca String
  tipo String
  disponivel Boolean @default(true)
  alocacao Alocacao[]
  manutencao Manutencao[]
}

model Manutencao {
  id_manutencao Int @id @default(autoincrement())
  id_veiculo Int
  data_inicio DateTime @default(now())
  data_fim DateTime?
  custo String
  descricao String
  veiculo Veiculo @relation(fields: [id_veiculo], references: [id_veiculo])
}

model Alocacao{
  id_alocacao Int @id @default(autoincrement())
  id_motorista Int
  id_veiculo Int
  data_saida DateTime @default(now())
  data_retorno DateTime?
  descricao String
  motorista Motorista @relation(fields: [id_motorista], references: [id_motorista])
  veiculo Veiculo @relation(fields: [id_veiculo], references: [id_veiculo])
}